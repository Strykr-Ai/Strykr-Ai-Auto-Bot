{ 
  "extends": "../../tsconfig.base.json", 
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"] 
}
