# Strykr.ai API credentials
# Required for financial insights generation
STRYKR_API_URL=https://api.strykr.ai/v1
STRYKR_API_KEY=your_strykr_api_key_here

# OpenAI API credentials (used for fallback categorization)
# Required for enhanced NLP functionalities
OPENAI_API_KEY=your_openai_api_key_here

# Twitter / X API credentials
# Required for Twitter/X integration and financial tweet monitoring
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_KEY_SECRET=your_twitter_api_key_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Telegram Bot credentials
# Required for Telegram channel posting
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here

# System Configuration
# Customize the behavior of the financial monitoring system

# Cron schedule for monitoring (default: hourly)
MONITORING_SCHEDULE="0 * * * *"

# Twitter accounts to monitor (comma-separated list)
# Add or remove financial accounts as needed
FINANCIAL_ACCOUNTS=zerohedge,WSJMarkets,business,markets,Stocktwits,CNBCnow,MarketWatch

# Content settings
MAX_TOPICS_PER_RUN=1        # Maximum topics to process per run
MIN_ENGAGEMENT_SCORE=10     # Minimum engagement score for processing a topic
ENABLE_DEDUPLICATION=true   # Prevent processing similar topics within 6 hours

# Debugging
DEBUG=false                 # Set to true for verbose logging
